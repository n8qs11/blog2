<h1><%= @tag.name %></h1>
<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>
<%= link_to 'All tags', tags_path %>
<%= link_to 'All articles', articles_path %><br>
<%= link_to 'Remove from all', tag_path(@tag), method: :delete, data: {confirm: "Are you sure?"} %>
