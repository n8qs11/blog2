<%= form_for(@article) do |f| %>
  <ul>
    <% @article.errors.full_messages do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :tag_list, "Tags" %><br>
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
